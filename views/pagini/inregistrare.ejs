<!DOCTYPE html>
<html lang="ro">
  
<head>
    <!--TASK 2-->
    <meta charset="UTF-8">
    <meta name="keywords" content="lego, jocuri, joc, timp liber, copii, legobin">
    <meta name="description" content="Magazin de jocuri lego. Jocurile lego sunt pentru toata lumea!">
    <link rel="stylesheet" href="/resurse/css/produse.css" type="text/css" />
    <title> LEGOBIN - Inregistrare</title>
   
    <!--TASK 3-->
    <title>LEGOBIN</title>
    <%- include("../fragmente/head.ejs") %>
    <script type="text/javascript" src=/resurse/js/inregistrare.js></script>


</head>
 <!--TASK 5-->
<body>
    


    <%- include("../fragmente/header") %>
    </header>
    <main>
        <div class="afisaj">
            <h1>Inregistrare utilizator</h1>
            
            <% if (locals.err !="") { %>
            <form id="form_inreg"  method="post" class="date"  action="/inreg"  enctype="multipart/form-data">
                <p>
                    <label>
                        Username: <input type="text" name="username"  value="prof<%= Math.floor(Math.random()*100000) %>" required pattern="[A-Za-z0-9]+">
                    </label>
                </p>
                <p>
                    <label>
                        Nume: <input type="text" name="nume" required value="Gogulescu" pattern="[A-Z][a-z]+">
                    </label>
                </p>
                <p>
                    <label>
                        Prenume: <input type="text" name="prenume" required value="Gogu" pattern="[A-Z][a-z]+([-\.][A-Z][a-z]+)?">
                    </label>
                </p>
                <p>
                    <label>
                        Parola: <input id="parl" type="password" required name="parola" value="">
                    </label>
                </p>
                <p>
                    <label>
                        Reintroduceti parola: <input id="rparl" required type="password" name="rparola" value="">
                    </label>
                </p>
                <p>
                    <label>
                        Email: <input type="text" name="email" required value="profprofprof007@gmail.com"  size="50">
                    </label>
                </p>
                <p>
                    <label>
                        Culoare text chat: <select name="culoareText"><option value="red">rosu</option><option value="green">verde</option><option value="blue">albastru</option></select>
                    </label>
                </p>
                <p>
                    <label>
                        Poza: <input type="file" name="poza">
                    </label>			
                </p>
                <p>		
                    <input type="submit" value="Trimite">
                    <input type="reset" value="Reseteaza">
                </p>
            </form>
        <% } %>
        <% if(locals.raspuns) { %>
        <%- locals.raspuns+"<br/>"%>
        <% } %>
        <% if(locals.err) { %>
        <%- locals.err %>
        <% } %>
        </div>
    </main>
    <%- include("../fragmente/footer.ejs") %>
</body>
</html>