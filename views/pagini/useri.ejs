<!DOCTYPE html>
<html lang="ro">
  
<head>
    <!--TASK 2-->
    <meta charset="UTF-8">
    <meta name="keywords" content="lego, jocuri, joc, timp liber, copii, legobin">
    <meta name="description" content="Magazin de jocuri lego. Jocurile lego sunt pentru toata lumea!">
   
    <!--TASK 3-->
    <title>LEGOBIN - USERI</title>
    <%- include("../fragmente/head.ejs") %>


    
</head>
 <!--TASK 5-->
<body>
    


    <%- include("../fragmente/header.ejs") %>
    </header>
    <main>
        <div class="afisaj">
            <h2>Useri</h2>
    
            <table id="useri">
              <tr>
                <th>id</th><th>Username</th><th>Nume</th><th>Prenume</th><th>Data</th><th>Rol</th><th>Ocupatie</th>
              </tr>
    
              <% for (var i = 0; i < useri.length; i++) { 
                    if(useri[i].rol=="comun"){
                    %>
                    <tr>
                      <td><%= useri[i].id %></td>
                      <td><%= useri[i].username %></td>
                      <td><%= useri[i].nume %></td>
                      <td><%= useri[i].email %></td>
                      <td><%= useri[i].ocupatie %></td>
                      <%  
                        d=new Date(useri[i].data_adaugare)
                        sir_data=`${d.getDate()}/${d.getMonth()}/${d.getFullYear()} ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}`
                      %>
                      <td><%=  sir_data %></td>
                       <td><%=  useri[i].rol %></td>
                    </tr> 
       
                    <% } %>			
              <% } %>
            </table>
            
            <p>Sterge utilizator</p>
            <form id="sterge" method="post" action="/sterge_utiliz">
                <label>
                    Id: <input type="text" name="id_utiliz" value="">
                </label>
                
                <input type="submit" value="Submit">
            </form>
        </div>
    </main>
    <%- include("../fragmente/footer.ejs") %>
</body>
</html>